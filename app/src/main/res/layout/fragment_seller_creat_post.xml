<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorForth">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:gravity="center|center_vertical"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none">

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:gravity="center|center_vertical"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Selling This Type of Fabric"
                    android:textAlignment="center"
                    android:textAllCaps="true"
                    android:textColor="@color/colorWhite"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_2_dp"
                    android:layout_marginTop="@dimen/margin_24_dp"
                    android:layout_marginEnd="@dimen/margin_2_dp"
                    app:cardBackgroundColor="@color/colorFifth"
                    app:cardCornerRadius="@dimen/margin_24_dp"
                    app:cardElevation="2dp">

                    <EditText
                        android:id="@+id/etFabricName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:gravity="start"
                        android:hint="@string/fabric_name"
                        android:inputType="textCapSentences"
                        android:nextFocusDown="@id/etFabricType"
                        android:padding="16dp"
                        tools:ignore="Autofill" />

                </android.support.v7.widget.CardView>


                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_2_dp"
                    android:layout_marginTop="@dimen/margin_24_dp"
                    android:layout_marginEnd="@dimen/margin_2_dp"
                    app:cardBackgroundColor="@color/colorFifth"
                    app:cardCornerRadius="@dimen/margin_24_dp"
                    app:cardElevation="2dp">

                    <EditText
                        android:id="@+id/etFabricType"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:gravity="start"
                        android:hint="@string/fabric_type"
                        android:inputType="textCapSentences"
                        android:nextFocusDown="@id/etFabricGsmMin"
                        android:padding="16dp"
                        tools:ignore="Autofill" />

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_2_dp"
                    android:layout_marginTop="@dimen/margin_24_dp"
                    android:layout_marginEnd="@dimen/margin_2_dp"
                    app:cardBackgroundColor="@color/colorFifth"
                    app:cardCornerRadius="@dimen/margin_24_dp"
                    app:cardElevation="2dp">

                    <EditText
                        android:id="@+id/etFabricGsmMin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:gravity="start"
                        android:hint="@string/fabric_gsm_min"
                        android:inputType="number"
                        android:nextFocusDown="@id/etFabricGsmMax"
                        android:padding="16dp"
                        tools:ignore="Autofill" />

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_2_dp"
                    android:layout_marginTop="@dimen/margin_24_dp"
                    android:layout_marginEnd="@dimen/margin_2_dp"
                    app:cardBackgroundColor="@color/colorFifth"
                    app:cardCornerRadius="@dimen/margin_24_dp"
                    app:cardElevation="2dp">

                    <EditText
                        android:id="@+id/etFabricGsmMax"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:gravity="start"
                        android:hint="@string/fabric_gsm_max"
                        android:inputType="number"
                        android:nextFocusDown="@id/etWeightMin"
                        android:padding="16dp"
                        tools:ignore="Autofill" />

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_2_dp"
                    android:layout_marginTop="@dimen/margin_24_dp"
                    android:layout_marginEnd="@dimen/margin_2_dp"
                    app:cardBackgroundColor="@color/colorFifth"
                    app:cardCornerRadius="@dimen/margin_24_dp"
                    app:cardElevation="2dp">

                    <EditText
                        android:id="@+id/etWeightMin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:gravity="start"
                        android:hint="Weight"
                        android:inputType="number"
                        android:nextFocusDown="@id/etWeightMax"
                        android:padding="16dp"
                        tools:ignore="Autofill" />

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_2_dp"
                    android:layout_marginTop="@dimen/margin_24_dp"
                    android:layout_marginEnd="@dimen/margin_2_dp"
                    android:visibility="gone"
                    app:cardBackgroundColor="@color/colorFifth"
                    app:cardCornerRadius="@dimen/margin_24_dp"
                    app:cardElevation="2dp">

                    <EditText
                        android:id="@+id/etWeightMax"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:gravity="start"
                        android:hint="@string/weight_max"
                        android:inputType="number"
                        android:padding="16dp"
                        tools:ignore="Autofill" />

                </android.support.v7.widget.CardView>


                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_2_dp"
                    android:layout_marginTop="@dimen/margin_24_dp"
                    android:layout_marginEnd="@dimen/margin_2_dp"
                    app:cardBackgroundColor="@color/colorFifth"
                    app:cardCornerRadius="@dimen/margin_24_dp"
                    app:cardElevation="2dp">

                    <EditText
                        android:id="@+id/etSellerLocation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:gravity="start"
                        android:hint="Your Location"
                        android:inputType="textCapSentences"
                        android:padding="16dp"
                        tools:ignore="Autofill" />

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_2_dp"
                    android:layout_marginTop="@dimen/margin_24_dp"
                    android:layout_marginEnd="@dimen/margin_2_dp"
                    app:cardBackgroundColor="@color/colorFifth"
                    app:cardCornerRadius="@dimen/margin_24_dp"
                    app:cardElevation="2dp">

                    <EditText
                        android:id="@+id/etPrice"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:gravity="start"
                        android:hint="Price"
                        android:inputType="number"
                        android:padding="16dp"
                        tools:ignore="Autofill" />

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginStart="@dimen/margin_2_dp"
                    android:layout_marginTop="@dimen/margin_24_dp"
                    android:layout_marginEnd="@dimen/margin_2_dp"
                    app:cardBackgroundColor="@color/colorFifth"
                    app:cardCornerRadius="@dimen/margin_24_dp"
                    app:cardElevation="2dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tvColor"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1.3"
                            android:gravity="start"
                            android:padding="16dp"
                            android:text="Select Fabric Color"
                            tools:ignore="Autofill" />

                        <View
                            android:id="@+id/idDivider"
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@color/colorThird" />

                        <TextView
                            android:id="@+id/tvSelectImage"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="start"
                            android:padding="16dp"
                            android:text="Upload Image"
                            tools:ignore="Autofill" />

                    </LinearLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/cvSelectImage"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_marginStart="@dimen/margin_2_dp"
                    android:layout_marginTop="@dimen/margin_24_dp"
                    android:layout_marginEnd="@dimen/margin_2_dp"
                    android:visibility="gone"
                    app:cardCornerRadius="@dimen/margin_24_dp"
                    app:cardElevation="2dp">

                    <ImageView
                        android:id="@+id/ivSelectImage"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitXY" />
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_2_dp"
                    android:layout_marginTop="@dimen/margin_24_dp"
                    android:layout_marginEnd="@dimen/margin_2_dp"
                    app:cardBackgroundColor="@color/colorFifth"
                    app:cardCornerRadius="@dimen/margin_24_dp"
                    app:cardElevation="2dp">

                    <EditText
                        android:id="@+id/edMessage"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:gravity="start"
                        android:hint="@string/additional_sms"
                        android:inputType="textMultiLine"
                        android:lines="8"
                        android:maxLines="3"
                        android:minLines="6"
                        android:padding="16dp"
                        android:scrollbars="vertical"
                        tools:ignore="Autofill" />

                </android.support.v7.widget.CardView>


                <Button
                    android:id="@+id/submitButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_2_dp"
                    android:layout_marginTop="@dimen/margin_24_dp"
                    android:layout_marginEnd="@dimen/margin_2_dp"
                    android:background="@drawable/login_button_bg_shape"
                    android:padding="@dimen/margin_8_dp"
                    android:text="SUBMIT"
                    android:textAllCaps="false"
                    android:textColor="@color/colorWhite"
                    android:textSize="25sp" />

                <ProgressBar
                    android:id="@+id/progressBar"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center|bottom"
                    android:layout_marginTop="@dimen/margin_2_dp"
                    android:layout_marginBottom="@dimen/margin_8_dp"
                    android:visibility="invisible" />

            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>