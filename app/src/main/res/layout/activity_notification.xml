<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorForth"
    android:orientation="vertical"
    tools:context=".activity.NotificationActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="@dimen/padding_8_dp"
        android:paddingBottom="@dimen/padding_8_dp"
        android:text="@string/notification_settings"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/testSize_16sp"
        android:textStyle="bold" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="@dimen/margin_24_dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/message_border"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="start"
            android:paddingStart="@dimen/padding_8_dp"
            android:paddingTop="@dimen/padding_8_dp"
            android:paddingEnd="0dp"
            android:paddingBottom="@dimen/padding_8_dp"
            android:text="Notification"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/testSize_16sp"
            android:textStyle="bold" />

        <Switch
            android:id="@+id/switch1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:paddingStart="0dp"
            android:paddingEnd="@dimen/padding_8_dp"/>


    </LinearLayout>


    <LinearLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible"
        android:orientation="vertical">


        <LinearLayout
            android:id="@+id/layoutFabrics"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="60dp"
            android:layout_marginTop="@dimen/margin_8_dp"
            android:layout_marginEnd="60dp"
            android:background="@drawable/message_border"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivFabrics"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/padding_4_dp"
                android:paddingTop="@dimen/padding_4_dp"
                android:paddingEnd="0dp"
                android:paddingBottom="@dimen/padding_4_dp"
                android:src="@drawable/ic_check_circle" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/fabrics"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/testSize_16sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutStockLot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="60dp"
            android:layout_marginTop="@dimen/margin_8_dp"
            android:layout_marginEnd="60dp"
            android:background="@drawable/message_border"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivStockLot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/padding_4_dp"
                android:paddingTop="@dimen/padding_4_dp"
                android:paddingEnd="0dp"
                android:paddingBottom="@dimen/padding_4_dp"
                android:src="@drawable/ic_check_circle" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/stock_lot"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/testSize_16sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutFactory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="60dp"
            android:layout_marginTop="@dimen/margin_8_dp"
            android:layout_marginEnd="60dp"
            android:background="@drawable/message_border"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivFactory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/padding_4_dp"
                android:paddingTop="@dimen/padding_4_dp"
                android:paddingEnd="0dp"
                android:paddingBottom="@dimen/padding_4_dp"
                android:src="@drawable/ic_check_circle" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/factory"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/testSize_16sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutQuote"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="60dp"
            android:layout_marginTop="@dimen/margin_8_dp"
            android:layout_marginEnd="60dp"
            android:background="@drawable/message_border"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivQuote"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/padding_4_dp"
                android:paddingTop="@dimen/padding_4_dp"
                android:paddingEnd="0dp"
                android:paddingBottom="@dimen/padding_4_dp"
                android:src="@drawable/ic_check_circle" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/quote"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/testSize_16sp"
                android:textStyle="bold" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>