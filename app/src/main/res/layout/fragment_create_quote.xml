<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorForth"
    tools:context=".quote.CreateQuoteFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:gravity="center|center_vertical"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none">

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:gravity="center|center_vertical"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textAlignment="center"
                    android:textAllCaps="true"
                    android:textColor="@color/colorWhite"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_2_dp"
                    android:layout_marginTop="@dimen/margin_24_dp"
                    android:layout_marginEnd="@dimen/margin_2_dp"
                    app:cardBackgroundColor="@color/colorFifth"
                    app:cardCornerRadius="@dimen/margin_24_dp"
                    app:cardElevation="2dp">

                    <EditText
                        android:id="@+id/etItemName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:gravity="start"
                        android:hint="@string/item_name"
                        android:inputType="textCapSentences"
                        android:nextFocusDown="@id/etFabricName"
                        android:padding="16dp"
                        tools:ignore="Autofill" />

                </android.support.v7.widget.CardView>


                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_2_dp"
                    android:layout_marginTop="@dimen/margin_24_dp"
                    android:layout_marginEnd="@dimen/margin_2_dp"
                    app:cardBackgroundColor="@color/colorFifth"
                    app:cardCornerRadius="@dimen/margin_24_dp"
                    app:cardElevation="2dp">

                    <EditText
                        android:id="@+id/etFabricName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:gravity="start"
                        android:hint="@string/fabric_name"
                        android:inputType="textCapSentences"
                        android:nextFocusDown="@id/etFabricType"
                        android:padding="16dp"
                        tools:ignore="Autofill" />

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_2_dp"
                    android:layout_marginTop="@dimen/margin_24_dp"
                    android:layout_marginEnd="@dimen/margin_2_dp"
                    app:cardBackgroundColor="@color/colorFifth"
                    app:cardCornerRadius="@dimen/margin_24_dp"
                    app:cardElevation="2dp">

                    <EditText
                        android:id="@+id/etFabricType"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:gravity="start"
                        android:hint="@string/fabric_type"
                        android:inputType="textCapSentences"
                        android:nextFocusDown="@id/etGsm"
                        android:padding="16dp"
                        tools:ignore="Autofill" />

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_2_dp"
                    android:layout_marginTop="@dimen/margin_24_dp"
                    android:layout_marginEnd="@dimen/margin_2_dp"
                    app:cardBackgroundColor="@color/colorFifth"
                    app:cardCornerRadius="@dimen/margin_24_dp"
                    app:cardElevation="2dp">

                    <EditText
                        android:id="@+id/etGsm"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:gravity="start"
                        android:hint="GSM"
                        android:inputType="number"
                        android:nextFocusDown="@id/tvDesign"
                        android:padding="16dp"
                        tools:ignore="Autofill" />

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_2_dp"
                    android:layout_marginTop="@dimen/margin_24_dp"
                    android:layout_marginEnd="@dimen/margin_2_dp"
                    app:cardBackgroundColor="@color/colorFifth"
                    app:cardCornerRadius="@dimen/margin_24_dp"
                    app:cardElevation="2dp">

                    <AutoCompleteTextView
                        android:id="@+id/tvDesign"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:gravity="start"
                        android:inputType="textCapSentences"
                        android:hint="@string/design"
                        android:nextFocusDown="@id/etQuantity"
                        android:padding="16dp" />

                </android.support.v7.widget.CardView>


                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_2_dp"
                    android:layout_marginTop="@dimen/margin_24_dp"
                    android:layout_marginEnd="@dimen/margin_2_dp"
                    app:cardBackgroundColor="@color/colorFifth"
                    app:cardCornerRadius="@dimen/margin_24_dp"
                    app:cardElevation="2dp">

                    <EditText
                        android:id="@+id/etQuantity"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:gravity="start"
                        android:hint="@string/total_quantity"
                        android:inputType="number"
                        android:padding="16dp"
                        tools:ignore="Autofill" />

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_2_dp"
                    android:layout_marginTop="@dimen/margin_24_dp"
                    android:layout_marginEnd="@dimen/margin_2_dp"
                    app:cardBackgroundColor="@color/colorFifth"
                    app:cardCornerRadius="@dimen/margin_24_dp"
                    app:cardElevation="2dp">

                    <AutoCompleteTextView
                        android:id="@+id/tvMeasurement"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:gravity="start"
                        android:hint="Measurement Type"
                        android:nextFocusDown="@id/etQuantity"
                        android:inputType="textCapSentences"
                        android:padding="16dp"
                        tools:ignore="Autofill" />

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_2_dp"
                    android:layout_marginTop="@dimen/margin_24_dp"
                    android:layout_marginEnd="@dimen/margin_2_dp"
                    app:cardBackgroundColor="@color/colorFifth"
                    app:cardCornerRadius="@dimen/margin_24_dp"
                    app:cardElevation="2dp">

                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <EditText
                                android:id="@+id/etSize"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@null"
                                android:gravity="start"
                                android:hint="@string/size"
                                android:inputType="textMultiLine|textCapSentences"
                                android:lines="5"
                                android:maxLines="3"
                                android:minLines="4"
                                android:padding="16dp"
                                tools:ignore="Autofill" />
                        </LinearLayout>
                    </ScrollView>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_2_dp"
                    android:layout_marginTop="@dimen/margin_24_dp"
                    android:layout_marginEnd="@dimen/margin_2_dp"
                    app:cardBackgroundColor="@color/colorFifth"
                    app:cardCornerRadius="@dimen/margin_24_dp"
                    app:cardElevation="2dp">

                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">


                            <EditText
                                android:id="@+id/edMessage"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@null"
                                android:gravity="start"
                                android:hint="@string/additional_sms"
                                android:inputType="textMultiLine|textCapSentences"
                                android:lines="8"
                                android:maxLines="3"
                                android:minLines="6"
                                android:padding="16dp"
                                android:scrollbars="vertical"
                                tools:ignore="Autofill" />
                        </LinearLayout>
                    </ScrollView>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/cvUploadImage"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginStart="@dimen/margin_2_dp"
                    android:layout_marginTop="@dimen/margin_24_dp"
                    android:layout_marginEnd="@dimen/margin_2_dp"
                    app:cardBackgroundColor="@color/colorFifth"
                    app:cardCornerRadius="@dimen/margin_24_dp"
                    app:cardElevation="2dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="start"
                        android:padding="16dp"
                        android:text="Add Design Image"
                        tools:ignore="Autofill" />

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/cvDesignImages"
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:layout_marginStart="@dimen/margin_2_dp"
                    android:layout_marginTop="@dimen/margin_24_dp"
                    android:layout_marginEnd="@dimen/margin_2_dp"
                    android:visibility="gone"
                    app:cardCornerRadius="@dimen/margin_24_dp"
                    app:cardElevation="2dp">

                    <android.support.constraint.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/ivDesignImg1"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:scaleType="fitXY"
                            android:src="@drawable/upload_image"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toStartOf="@+id/ivDesignImg2"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <ImageView
                            android:id="@+id/ivDesignImg2"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:scaleType="fitXY"
                            android:src="@drawable/upload_image"
                            android:visibility="gone"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/ivDesignImg1"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/ivSelectImgNumber"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:gravity="center"
                            android:text="8"
                            android:textColor="@color/colorWhite"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            app:layout_constraintBottom_toTopOf="@+id/ivAddImg"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/ivDesignImg1"
                            app:layout_constraintTop_toTopOf="parent" />

                        <ImageView
                            android:id="@+id/ivAddImg"
                            android:layout_width="80dp"
                            android:layout_height="70dp"
                            android:src="@drawable/ic_add"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent" />

                    </android.support.constraint.ConstraintLayout>

                </android.support.v7.widget.CardView>


                <Button
                    android:id="@+id/submitButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_2_dp"
                    android:layout_marginTop="@dimen/margin_24_dp"
                    android:layout_marginEnd="@dimen/margin_2_dp"
                    android:background="@drawable/login_button_bg_shape"
                    android:padding="@dimen/margin_8_dp"
                    android:text="SUBMIT"
                    android:textAllCaps="false"
                    android:textColor="@color/colorWhite"
                    android:textSize="25sp" />

                <ProgressBar
                    android:id="@+id/progressBar"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center|bottom"
                    android:layout_marginTop="@dimen/margin_2_dp"
                    android:layout_marginBottom="@dimen/margin_8_dp"
                    android:visibility="invisible" />

            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>